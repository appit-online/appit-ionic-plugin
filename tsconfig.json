{
  "compilerOptions": {
    "allowUnreachableCode": false,
    "noImplicitAny": true,
    "declaration": true,
    "experimentalDecorators": true,
    "importHelpers": false,
    "module": "commonjs",
    "outDir": "dist",
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "pretty": true,
    "strict": true,
    "skipLibCheck": true,
    "types": [],
    "target": "es5",
    "lib": [
      "es2015",
      "dom"
    ]
  },
  "include": ["www/common.ts", "www/guards.ts", "www/index.ts"]
}
